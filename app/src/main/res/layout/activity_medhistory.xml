<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back4"
    tools:context=".medhistory">

    <EditText
        android:id="@+id/textv"
        android:layout_width="405dp"
        android:layout_height="69dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="clip_horizontal|clip_vertical|center_horizontal|center_vertical"
        android:inputType="textPersonName"
        android:text=" MEDICAL HISTORY"
        android:enabled="false"
        android:clickable="false"
        android:cursorVisible="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FDD017"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listv"
        android:layout_width="394dp"
        android:layout_height="598dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/notebook"
        android:elevation="30dp"
        android:outlineAmbientShadowColor="#F2F3F4"
        android:paddingLeft="5dp"
        android:paddingTop="?attr/actionBarSize"
        android:paddingRight="5dp"
        app:fastScrollEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textv" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="328dp"
        android:layout_marginTop="624dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        app:backgroundTint="#30F404"
        app:elevation="30dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/listv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065"
        app:srcCompat="@drawable/ic_baseline_add_24" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>