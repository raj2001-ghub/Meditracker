<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenback3">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenback3"
    tools:context=".notificationlist">

    <EditText
        android:id="@+id/notifheading"
        android:layout_width="405dp"
        android:layout_height="69dp"
        android:layout_marginTop="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="clip_horizontal|clip_vertical|center_horizontal|center_vertical"
        android:inputType="textPersonName"
        android:text="NOTIFICATION TABLE"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#F31202"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notificationrecyclerlist"
        android:layout_width="394dp"
        android:layout_height="629dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/brownback"
        android:elevation="30dp"
        android:outlineAmbientShadowColor="#F2F3F4"
        android:paddingLeft="5dp"
        android:paddingTop="?attr/actionBarSize"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notifheading" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addnotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="328dp"
        android:layout_marginTop="640dp"
        android:layout_marginBottom="9dp"
        android:clickable="true"
        android:paddingLeft="25dp"
        android:paddingTop="15dp"
        app:backgroundTint="#9535D1"
        app:elevation="30dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/notificationrecyclerlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058"
        app:srcCompat="@drawable/ic_baseline_add_24" />



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>