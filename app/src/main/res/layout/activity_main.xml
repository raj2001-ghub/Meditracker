<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenback2">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenback2"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/viewbi"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="535dp"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:elevation="40dp"
        android:src="@drawable/view4"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton

        android:id="@+id/editbi"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="615dp"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:elevation="40dp"
        android:src="@drawable/edit12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/trackerlist"
        android:layout_width="382dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/shadow_button_layer"
        android:text="         MEDICAL HISTORY"
        android:textColor="#BCC6CC"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification" />

    <Button
        android:id="@+id/viewb"
        android:layout_width="382dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/shadow_button_layer"
        android:text="      VIEW PROFILE"
        android:textColor="#BCC6CC"
        android:textSize="22sp"
        android:enabled="false"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackerlist" />


    <Button
        android:id="@+id/editb"
        android:layout_width="382dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="93dp"
        android:background="@drawable/shadow_button_layer"
        android:text="      EDIT PROFILE"
        android:textColor="#BCC6CC"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trackerlist" />

    <Button
        android:id="@+id/notification"
        android:layout_width="382dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/shadow_button_layer"
        android:elevation="35dp"
        android:text="             CREATE NOTIFICATIONS"
        android:textColor="#BCC6CC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="216dp"
        android:layout_height="213dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="38dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/myself" />

    <EditText
        android:id="@+id/name"
        android:layout_width="384dp"
        android:layout_height="73dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="12dp"
        android:background="#55FFFFFF"
        android:enabled="false"
        android:ems="10"
        android:fadingEdge="horizontal|vertical"
        android:inputType="textMultiLine"
        android:textColor="#F30404"
        android:textSize="28sp"
        android:textStyle="bold"
        android:clickable="false"
        android:cursorVisible="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilepic" />

    <ImageButton
        android:id="@+id/notificationicon"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="370dp"
        android:clickable="false"
        android:src="@drawable/alarm"
        android:elevation="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:clickable="false"
        android:id="@+id/medicalhistoryicon"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="451dp"
        android:elevation="40dp"
        android:src="@drawable/registry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>