<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back16">

    <EditText
        android:id="@+id/mednamedet"
        android:layout_width="381dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/backgroundshadow2"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:text="  Medicine Name - "
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColor="#000000"
        android:id="@+id/illnessnamedet"
        android:layout_width="381dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/backgroundshadow2"
        android:clickable="false"
        android:cursorVisible="false"
        android:enabled="false"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="  Ailment Type - "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mednamedet" />

    <EditText
        android:textColor="#000000"
        android:id="@+id/datedet"
        android:layout_width="381dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/backgroundshadow2"
        android:clickable="false"
        android:cursorVisible="false"
        android:enabled="false"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="  Date Prescribed - "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/illnessnamedet" />

    <EditText
        android:id="@+id/pillsdet"
        android:layout_width="381dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/backgroundshadow2"
        android:clickable="false"
        android:textColor="#000000"
        android:enabled="false"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="  Number Of Pills Prescribed - "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datedet" />

    <EditText
        android:id="@+id/pricedet"
        android:layout_width="381dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/backgroundshadow2"
        android:clickable="false"
        android:textColor="#000000"
        android:enabled="false"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="  Total Price - "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pillsdet" />

    <EditText
        android:id="@+id/docnamedet"
        android:layout_width="381dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/backgroundshadow2"
        android:clickable="false"
        android:textColor="#000000"
        android:enabled="false"
        android:cursorVisible="false"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="  Doctor's Name - "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricedet" />

    <Button
        android:id="@+id/backtor"
        android:layout_width="90dp"
        android:layout_height="58dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="159dp"
        android:text="BACK"
        android:background="@drawable/backgroundshadow2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/docnamedet" />
</androidx.constraintlayout.widget.ConstraintLayout>